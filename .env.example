# ============================================================
# PickLT Environment Variables
# Copy this file to .env.local and fill in your keys
# ============================================================

# ─── Clerk Authentication ────────────────────────────────────
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/login
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/signup
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# ─── Appwrite ────────────────────────────────────────────────
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://fra.cloud.appwrite.io/v1
NEXT_PUBLIC_APPWRITE_PROJECT_ID=your_project_id
APPWRITE_API_KEY=your_appwrite_api_key

# Appwrite Database
APPWRITE_DATABASE_ID=your_database_id

# Appwrite Collections
APPWRITE_COLLECTION_USERS=
APPWRITE_COLLECTION_MOVER_PROFILES=
APPWRITE_COLLECTION_CREW_MEMBERS=
APPWRITE_COLLECTION_MOVES=
APPWRITE_COLLECTION_MOVE_REQUESTS=
APPWRITE_COLLECTION_MOVER_LOCATIONS=
APPWRITE_COLLECTION_MOVE_STATUS_HISTORY=
APPWRITE_COLLECTION_PAYMENTS=
APPWRITE_COLLECTION_REVIEWS=
APPWRITE_COLLECTION_NOTIFICATIONS=
APPWRITE_COLLECTION_INVENTORY_CATALOG=

# Appwrite Functions
NEXT_PUBLIC_FUNCTION_CREATE_MOVE=
NEXT_PUBLIC_FUNCTION_CALCULATE_PRICE=
NEXT_PUBLIC_FUNCTION_SUBMIT_MOVER_PROFILE=
NEXT_PUBLIC_FUNCTION_ADMIN_VERIFY_MOVER=
NEXT_PUBLIC_FUNCTION_BROADCAST_MOVE_REQUEST=
NEXT_PUBLIC_FUNCTION_UPDATE_MOVER_LOCATION=
NEXT_PUBLIC_FUNCTION_UPDATE_MOVE_STATUS=
